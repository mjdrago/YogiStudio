
@{
    ViewBag.Title = "CRUDCalendar";
}

<h2 id="mainHeader">Course Calendar</h2>
<hr />
<h3 id="quote">Our Vibes Speak Louder Than Our Words</h3>


<div id="container">
    <div id="calendar"></div>


    
        @*<p>
            Update the schedule here. Add, remove and update classes as needed for the month.

        </p>*@
    
</div>

<div id="popupEventForm" class="modal hide" style="display: none;">
    <div class="modal-header"><h3>Add new event</h3></div>
    <div class="modal-body">
        <form id="EventForm" class="well">
            <input type="hidden" id="eventID">
            <div class="modal-body">
                <label>Class</label>
                @Html.DropDownList("Class", (SelectList)ViewBag.Classes, " ")
            </div>
            @*<input type="text" id="eventTitle" placeholder="Title here"><br />*@
            <div class="modal-body">
                <label>Instructor</label>
                @Html.DropDownList("Instructor", (SelectList)ViewBag.Instructors, " ")
            </div>
            <label>Scheduled date</label>
            <input type="text" id="eventDate"><br />
            <label>Scheduled time</label>
            <input type="text" id="eventTime"><br />
            <label>Appointment length (minutes)</label>
            <input type="text" id="eventDuration" placeholder="30"><br />
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" id="btnPopupCancel" data-dismiss="modal" class="btn">Cancel</button>
        <button type="button" id="btnPopupSave" data-dismiss="modal" class="btn btn-primary">Save event</button>
    </div>
</div>